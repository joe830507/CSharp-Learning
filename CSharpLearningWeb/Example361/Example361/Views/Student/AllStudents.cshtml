@using Example361
@model IList<Example361.Student>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style type="text/css">
        table {
            border-style: solid;
            border-color: blue;
            border-spacing: 20px 5px;
        }
    </style>
</head>
<body>
    @{
if (Model != null && Model.Count > 0)
        {
            <table>
                <caption>Student List</caption>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Course</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.ID</td>
                                <td>@s.Name</td>
                                <td>@s.Age</td>
                                <td>@s.Course</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>No Student</div>
        }
    }
</body>
</html>